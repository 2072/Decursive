    <Script>

	if not DcrLoadedFiles or not DcrLoadedFiles["Dcr_DebuffsFrame.lua"] then
	    if not DcrCorrupted then message("Decursive installation is corrupted! (Dcr_DebuffsFrame.lua not loaded)"); end;
	    DcrCorrupted = true;
	    return;
	end

	Dcr:SetDateAndRevision("$Date$", "$Revision$");
    </Script>

    <Frame name="DcrMUFsContainer" frameStrata="MEDIUM" toplevel="true" enableMouse="true" movable="true" hidden="true" parent="UIParent">
	<Size>
	    <AbsDimension x="20" y="20" />
	</Size>
	<Anchors>
	    <Anchor point="CENTER" relativePoint="CENTER">
		<Offset>
		    <AbsDimension x="200" y="250"/>
		</Offset>
	    </Anchor>
	</Anchors>
	<Scripts>
	    <OnLoad>
		this.UpdateYourself = true;
		this.MaxUnit = 5;
		this.UnitShown = 0;
	    </OnLoad>
	</Scripts>
	<Frames>
	    <Button name="DragButton">
		<Size>
		    <AbsDimension x="20" y="20" />
		</Size>
		<Anchors>
		    <Anchor point="TOPLEFT">
			<Offset>
			    <AbsDimension x="0" y="0"/>
			</Offset>
		    </Anchor>
		</Anchors>
		<HighlightTexture file="Interface\Buttons\UI-Common-MouseHilight" alphaMode="ADD" />
		<!--<HighlightTexture file="Interface\Buttons\ButtonHilight-Square" alphaMode="ADD" /> -->
		<!--<HighlightTexture file="Interface\Buttons\UI-Common-MouseHilight" alphaMode="ADD"/> -->

		<Scripts>
		    <OnMouseUp>
			Dcr.MicroUnitF:SavePos();
			if ( this.isMoving ) then
			this:GetParent():StopMovingOrSizing();
			this.isMoving = false;
			end
		    </OnMouseUp>
		    <OnMouseDown>
			if (   arg1 == "LeftButton" and IsAltKeyDown() ) then
			this:GetParent():StartMoving();
			this.isMoving = true;
			end

			Dcr.MicroUnitF:OnCornerClick(arg1, this);
		    </OnMouseDown>
		    <OnHide>
			if ( this.isMoving ) then
			this:GetParent():StopMovingOrSizing();
			this.isMoving = false;
			end
		    </OnHide>
		    <OnEnter>
			Dcr.MicroUnitF:OnCornerEnter();
		    </OnEnter>
		    <OnLeave>
			if (Dcr.profile.DebuffsFrameShowHelp) then
			GameTooltip:Hide();
			end;
		    </OnLeave>
		</Scripts>
	    </Button>
	</Frames>
    </Frame>

    <!-- Templates -->
    <Button name="DcrMicroUnitTemplateSecure" inherits="SecureUnitButtonTemplate" virtual="true">
	<Size>
	    <AbsDimension x="20" y="20"/>
	</Size>

	<Scripts>
	    <OnLoad>
		Dcr.MicroUnitF:OnLoad();
	    </OnLoad>
	    <OnEnter>
		Dcr.MicroUnitF:OnEnter();
	    </OnEnter>
	    <OnLeave>
		Dcr.MicroUnitF:OnLeave();
	    </OnLeave>
	</Scripts>
    </Button>
    
    <Script>
	DcrLoadedFiles["Dcr_DebuffsFrame.xml"] = true;
    </Script>
</Ui>
